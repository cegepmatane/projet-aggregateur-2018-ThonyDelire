<Window x:Class="tp2.PokemonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tp2"
        mc:Ignorable="d"
        Title="PokemonWindow" Height="528.6" Width="906.8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FF282828" HorizontalAlignment="Left" Height="499" Stroke="Black" VerticalAlignment="Top" Width="67"/>
        <Button x:Name="Accueil" Content="Accueil" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="Accueil_Click"/>
        <Button x:Name="Meteo" Content="Météo" HorizontalAlignment="Left" Margin="0,75,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="Meteo_Click"/>
        <Button x:Name="Rss" Content="Rss" HorizontalAlignment="Left" Margin="0,111,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="Rss_Click"/>
        <Button x:Name="slack" Content="Slack" HorizontalAlignment="Left" Margin="0,147,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="slack_Click"/>
        <Button x:Name="cryptomo" Content="CrytoMo" HorizontalAlignment="Left" Margin="0,183,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="cryptomo_Click"/>
        <Button x:Name="pokemon" Content="Pokemon" HorizontalAlignment="Left" Margin="0,219,0,0" VerticalAlignment="Top" Width="67" Height="36" Click="pokemon_Click"/>
        <Canvas x:Name="visuel" HorizontalAlignment="Left" Height="478" Margin="89,7,0,0" VerticalAlignment="Top" Width="787" Grid.ColumnSpan="2" Background="#FF3974AB">
            <Label Content="Pokemon" FontSize="48" Foreground="White"/>
            <TextBox Height="23" Canvas.Left="57" TextWrapping="Wrap" Text="TextBox" Canvas.Top="137" Width="138" Name="poke1"/>
            <TextBox Height="23" Canvas.Left="320" TextWrapping="Wrap" Text="TextBox" Canvas.Top="137" Width="138" Name="poke2"/>
            <TextBox Height="23" Canvas.Left="576" TextWrapping="Wrap" Text="TextBox" Canvas.Top="137" Width="138" Name="poke3"/>
            <TextBox Height="23" Canvas.Left="57" TextWrapping="Wrap" Text="TextBox" Canvas.Top="307" Width="138" Name="poke4"/>
            <TextBox Height="23" Canvas.Left="320" TextWrapping="Wrap" Text="TextBox" Canvas.Top="307" Width="138" Name="poke5"/>
            <TextBox Height="23" Canvas.Left="576" TextWrapping="Wrap" Text="TextBox" Canvas.Top="307" Width="138" Name="poke6"/>
            <Image Height="110" Canvas.Left="57" Canvas.Top="176" Width="123" Name="imgPoke1" Source="/tp2;component/PokemonImage/bulbasaur.jpg" />
            <Image Height="110" Canvas.Left="320" Canvas.Top="176" Width="123" Name="imgPoke2" Source="/tp2;component/PokemonImage/ivysaur.png"/>
            <Image Height="142" Canvas.Left="576" Canvas.Top="160" Width="123" Name="imgPoke3" Source="/tp2;component/PokemonImage/venusaur.jpg"/>
            <Image Height="110" Canvas.Left="57" Canvas.Top="358" Width="123" Name="imgPoke4" Source="/tp2;component/PokemonImage/charmander.png"/>
            <Image Height="110" Canvas.Left="320" Canvas.Top="358" Width="123" Name="imgPoke5" Source="/tp2;component/PokemonImage/charmeleon.png"/>
            <Image Height="110" Canvas.Left="576" Canvas.Top="358" Width="123" Name="imgPoke6" Source="/tp2;component/PokemonImage/charizard.jpg">
            </Image>
        </Canvas>
    </Grid>
</Window>
